<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>com.webproject.controller.SignUpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>helloServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <!-- NOT MINE -->

    <!-- CONTROLLERS -->
    <!-- hello -->
    <servlet>
        <servlet-name>servletHello</servlet-name>
        <servlet-class>com.webproject.controller.ServletHello</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletHello</servlet-name>
        <url-pattern>/hello.do</url-pattern>
    </servlet-mapping>
    <!-- product -->
    <servlet>
        <servlet-name>productController</servlet-name>
        <servlet-class>com.webproject.controller.ProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/product.do</url-pattern>
    </servlet-mapping>
    <!-- mock -->
    <servlet>
        <servlet-name>mockController</servlet-name>
        <servlet-class>com.webproject.controller.MockController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mockController</servlet-name>
        <url-pattern>/mock.do</url-pattern>
    </servlet-mapping>
    <!-- mvc -->
    <servlet>
        <servlet-name>mvc</servlet-name>
        <servlet-class>com.webproject.controller.MVCMockController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mvc</servlet-name>
        <url-pattern>/mvc.do</url-pattern>
    </servlet-mapping>
    <!-- cookie -->
    <servlet>
        <servlet-name>cookieMockController</servlet-name>
        <servlet-class>com.webproject.controller.CookieMockController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cookieMockController</servlet-name>
        <url-pattern>/cookie.do</url-pattern>
    </servlet-mapping>
    <!-- session -->
    <servlet>
        <servlet-name>sessionMockController</servlet-name>
        <servlet-class>com.webproject.controller.SessionMockController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionMockController</servlet-name>
        <url-pattern>/session.do</url-pattern>
    </servlet-mapping>

    <!-- index -->
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/hello.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index.do</url-pattern>
    </servlet-mapping>

    <!-- FILTERS -->
    <!--request info-->
    <filter>
        <filter-name>timeFilter</filter-name>
        <filter-class>com.webproject.filter.ProcessingTimeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>timeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--request info-->
    <filter>
        <filter-name>infoFilter</filter-name>
        <filter-class>com.webproject.filter.RequestInfoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>infoFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <!--request info-->
    <filter>
        <filter-name>attributesToSessionFilter</filter-name>
        <filter-class>com.webproject.filter.AddAttributeToSessionFilter</filter-class>
        <init-param>
            <param-name>filter-param-name-A</param-name>
            <param-value>filter-param-name-A</param-value>
        </init-param>
        <init-param>
            <param-name>filter-param-name-B</param-name>
            <param-value>filter-param-name-B</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>attributesToSessionFilter</filter-name>
        <servlet-name>mockController</servlet-name>
    </filter-mapping>

