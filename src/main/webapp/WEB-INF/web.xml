<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/UsersDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!--Start Page-->
    <servlet>
        <servlet-name>homeServlet</servlet-name>
        <servlet-class>com.webproject.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homeServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!--User Page-->
    <servlet>
        <servlet-name>userMainPageServlet</servlet-name>
        <servlet-class>com.webproject.servlets.UserMainPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userMainPageServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <!--Login Page-->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.webproject.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--RegistrationServlet Page-->
    <servlet>
        <servlet-name>registrationServlet</servlet-name>
        <servlet-class>com.webproject.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>


    <filter>
    <filter-name>authorizationFilter</filter-name>
    <filter-class>com.webproject.filters.AuthorizationFilter</filter-class>
    </filter>

    <filter-mapping>
    <filter-name>authorizationFilter</filter-name>
    <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>