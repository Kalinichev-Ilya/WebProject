<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/UsersDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


    <!--Login Page-->
    <servlet>
        <servlet-name>authorizationServlet</servlet-name>
        <servlet-class>com.webproject.servlets.AuthorisationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorizationServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <!--Authorization filter-->
    <filter>
        <filter-name>authorizationFilter</filter-name>
        <filter-class>com.webproject.filters.AuthorizationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authorizationFilter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

    <!--UserServlet Page-->
    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>com.webproject.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <!--ReloginServlet Page-->
    <servlet>
        <servlet-name>reloginServlet</servlet-name>
        <servlet-class>com.webproject.servlets.ReloginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reloginServlet</servlet-name>
        <url-pattern>/relogin</url-pattern>
    </servlet-mapping>

